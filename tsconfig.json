{
  "extends": "./playgrounds/nuxt/.nuxt/tsconfig.json",
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "csstype",
      "vitest",
      "vitest/globals",
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      "vue-email": [
        "./src/index"
      ],
      "vue-email/nuxt": [
        "./src/nuxt/module"
      ],
      "vue-email/compiler": [
        "./src/compiler/index"
      ],
      "vue-email/compiler/node": [
        "./src/compiler/node/index"
      ],
      "vue-email/compiler/deno": [
        "./src/compiler/deno/index"
      ],
      "#components": [
        ".nuxt/components"
      ],
      "#vue-router": [
        ".nuxt/vue-router"
      ],
      "#imports": [
        ".nuxt/imports"
      ],
      "#build": [
        ".nuxt"
      ],
      "#build/*": [
        ".nuxt/*"
      ],
      "#app": [
        "./node_modules/nuxt/dist/app"
      ],
      "#app/*": [
        "./node_modules/nuxt/dist/app/*"
      ],
      "#color-mode-options": [
        "./docs/.nuxt/color-mode-options"
      ],
      "#nuxt-component-meta": [
        "./docs/.nuxt/component-meta.mjs"
      ],
      "#nuxt-component-meta/types": [
        "./docs/.nuxt/component-meta.d.ts"
      ],
      "$src": ["./src"],
      "$src/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "typescript-deno-plugin",
        "include": ["src/compiler/deno/**/*", "tests/deno/**/*"],
        "exclude": ["node_modules", "**/*spec.ts"]
      }
    ]
  },
  "include": [
    "./env.d.ts",
    "docs/**/*",
    "src/**/*",
    "tests/**/*",
    "docs/**/*",
    "playgrounds/**/*",
    "tests_deno"
  ],
  "exclude": [
    "../dist",
    "../.output"
  ]
  // "vueCompilerOptions": {
  //   "plugins": [
  //     "pinceau/volar"
  //   ]
  // }
}
