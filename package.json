  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./nuxt": {
      "types": "./dist/nuxt.d.ts",
      "import": "./dist/nuxt.mjs",
      "require": "./dist/nuxt.cjs"
    },
    "./compiler": {
      "types": "./dist/compiler.d.ts",
      "import": "./dist/compiler.mjs",
      "require": "./dist/compiler.cjs"
    },
    "./compiler/node": {
      "types": "./dist/compiler.node.d.ts",
      "import": "./dist/compiler.node.mjs",
      "require": "./dist/compiler.node.cjs"
    },
    "./compiler/deno": {
      "types": "./dist/compiler.deno.d.ts",
      "import": "./dist/compiler.deno.mjs",
      "require": "./dist/compiler.deno.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm build:main && pnpm pack",
    "build:main": "npx ts-node builder/build.cli.ts --name main",
    "build:deno-test": "npx ts-node --esm builder/build.cli.ts --name deno-test",
    "dev": "vite build --watch",
    "release": "changelogen --release",
    "lint": "eslint --ext .js,.vue,.ts,.tsx .",
    "lint:fix": "eslint --ext .js,.vue,.ts,.tsx . --fix",
    "test:unit": "vitest run",
    "test": "pnpm test:unit",
    "test:deno-no-build": "deno test -A",
    "test:deno": "pnpm generate:deno-build-preview && deno test -A",
    "test:watch": "vitest watch",
    "dev:nuxt": "nuxt dev playgrounds/nuxt",
    "build:nuxt": "nuxt build playgrounds/nuxt",
    "generate:nuxt": "nuxt generate playgrounds/nuxt",
    "preview:nuxt": "nuxt preview playgrounds/nuxt",
    "dev:docs": "nuxt dev docs",
    "build:docs": "nuxt build docs",
    "generate:docs": "nuxt generate docs",
    "generate:deno-build-preview": "pnpm build:deno-test && deno task compile",
    "preview:docs": "nuxt preview docs",
    "dev:client": "nuxt dev client",
    "build:client": "nuxt generate client",
    "prepublish": "pnpm run build"
  },
  "peerDependencies": {
    "vue": ">=3.0.0"
  },
  "optionalDependencies": {
    "@nuxt/kit": "^3.6.5"
  },
  "dependencies": {
    "@flowko/tw-to-css": "^0.0.6",
