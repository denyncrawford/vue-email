  },
  "resolutions": {
    "vue-email": "link:."
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.40.2",
    "@nuxt/kit": "^3.6.5",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@swc-node/register": "^1.6.7",
    "@swc/core": "^1.3.78",
    "@types/html-to-text": "^9.0.1",
    "@types/pretty": "^2.0.1",
    "changelogen": "^0.5.4",
    "cheerio": "1.0.0-rc.12",
    "denoify": "^1.6.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "happy-dom": "^10.10.2",
    "html-to-text": "^9.0.5",
    "kolorist": "^1.8.0",
    "nuxt": "^3.6.5",
    "prettier": "^3.0.2",
    "pretty": "^2.0.0",
    "typescript": "^5.1.6",
    "ufo": "^1.2.0",
    "unbuild": "v2.0.0-rc.0",
    "vite": "4.4.9",
    "vitest": "^0.34.2",
    "vue": "^3.3.4"
  }
